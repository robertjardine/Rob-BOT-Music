doctype html
html(lang='en')
    head
        //- Meta Information
        meta(charset='UTF-8')
        meta(http-equiv='X-UA-Compatible', content='IE=edge') 
        meta(name='viewport', content="width=device-width", initial-scale=1)

        title Let's Listen! - Rob-BOT

        //- Boostrap
        link(rel='stylesheet', type='text/css', href='https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css')
        script(src='https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js')

        script(src='https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js')

        link(rel='stylesheet', type='text/css', href='../css/main.css')
    body
        - var currentSong = playlist[0].currSong.songInfo

        //-  Left Sidebar With Generated Playlist Information
        div#left-sidebar
            h1 Playlist
            div#current-playlist
                each song in playlist
                    div.playlist-song
                        p(onclick="setCurrentSong(this)", artist=song.currSong.songInfo.artist, album=song.currSong.songInfo.album)= song.currSong.songInfo.name
                    //-  Loop through playlist and populate items on load/update

        div#main-content
            //-  Multiple Tabs for Song Info 
            div#tabs
                div.row.text-center
                    div.col-lg-3
                    div.col-lg-2
                        span Playing
                    div.col-lg-2
                        span Artist
                    div.col-lg-2
                        span Album
                    div.col-lg-3

            div
                //- Current Song Information 
                //-     New Generated Name Information 
                //-     Default Visible 
                div#current-song
                    h1#curr-name= currentSong.name
                    h3#curr-artist= currentSong.artist
                    h3#curr-album= currentSong.album
                    div#album-art
        
                //-  Default Hidden 
                div#artist-tab
                
                //-  Default Hidden
                div#album-tab

            //-  Play/Rating Bar 
                //-  Update Neural Network After Being Rated 
            div#song-controls
                div#like-dislike
                    //-  On-Click Update The Neural Network And Playlist 
                        //-  Do Asynchronous (Promise/Callback) For Better User Experience 
                    iframe(src="https://open.spotify.com/embed?uri=spotify:track:" + currentSong.id, width="600", height="80", frameborder="0", allowtransparency="true", allow="encrypted-media")
                    //- iframe(src="https://open.spotify.com/embed?uri=spotify:track:58AygtvW5GvLn0X3olPF2d", width="600", height="80", frameborder="0", allowtransparency="true", allow="encrypted-media")

        script(src="../js/train.js")